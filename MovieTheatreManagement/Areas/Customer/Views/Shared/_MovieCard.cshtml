@model Movie

<div class="card movie-card">
    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/api/placeholder/300/450" : Model.ImageUrl)"
         class="card-img-top movie-card-image"
         alt="@Model.Title" />
    <div class="card-body">
        <h5 class="card-title fw-bold">@Model.Title</h5>
        <p class="card-text small mb-2">
            <i class="bi bi-tag"></i>
            @(Model.MovieGenres != null && Model.MovieGenres.Any()
                ? string.Join(", ", Model.MovieGenres.Select(g => g.Genre.GenreName))
                : "N/A")
        </p>
        <div class="d-grid">
            <a asp-action="Details" asp-route-id="@Model.MovieId" class="btn btn-outline-secondary btn-sm">Details</a>
        </div>
    </div>
</div>