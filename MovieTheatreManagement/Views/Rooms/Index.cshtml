@model List<Room>

@{
	ViewData["Title"] = "Rooms";
}

<div class="container mt-4">
	<h1 class="text-center">Room List</h1>

	<div class="d-flex justify-content-between mb-3">
		<a asp-action="upsert" class="btn btn-success">
			<i class="bi bi-plus-circle"></i> Create New
		</a>
	</div>

	<table class="table table-striped table-hover">
		<thead class="table-dark">
			<tr>
				<th class="text-center">
					Room Name
				</th>
				<th class="text-center">
					Total Rows
				</th>
				<th class="text-center">
					Total Columns
				</th>
				<th class="text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td class="text-center">
						@item.Name
					</td>
					<td class="text-center">
						@item.TotalRows
					</td>
					<td class="text-center">
						@item.TotalColumns
					</td>
					<td class="text-center">
						<div class="btn-group">
							<a asp-action="upsert" asp-controller="rooms" asp-route-id="@item.RoomId" class="btn btn-warning">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a onclick="Delete('/rooms/delete/@item.RoomId')" class="btn btn-danger" style="cursor: pointer">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts
{
	<script src="~/js/deletedConfirmation.js"></script>
}

